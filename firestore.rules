rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Highscores: Public Read, Auth Write
    match /highscores/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Scores: Public Read, Auth Write
    match /scores/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Users: Public Read (for search/profiles), Auth Write
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;

      // Friendships & Requests: Auth Read/Write
      match /friends/{friendId} {
        allow read, write: if request.auth != null;
      }
      match /requests/{requestId} {
        allow read, write: if request.auth != null;
      }
    }

    // Referrals: Auth Read/Write
    match /referrals/{document} {
      allow read: if true; // Allow reading explicitly if needed, or restricted? 
      // Actually hasDailyReferral requires read.
      allow write: if request.auth != null;
    }

    // Default Fallback (Block others)
    match /{document=**} {
      allow read, write: if false; 
    }
  }
}
