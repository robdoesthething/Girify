rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check if user is admin
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admins: Public Read, Self Write (for verification/promotion)
    match /admins/{uid} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Highscores: Public Read, Auth Write
    match /highscores/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Scores: Public Read, Auth Write
    match /scores/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Users: Public Read (for search/profiles), Auth Write (Self or Admin)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && (
        resource.data.uid == request.auth.uid || 
        request.resource.data.uid == request.auth.uid || 
        isAdmin()
      );

      // Friendships & Requests: Auth Read/Write
      match /friends/{friendId} {
        allow read, write: if request.auth != null;
      }
      match /requests/{requestId} {
        allow read, write: if request.auth != null;
      }
      // Badge Stats: Track badge progress per user
      match /badgeStats/{statId} {
        allow read: if true;
        allow write: if request.auth != null && (
          get(/databases/$(database)/documents/users/$(userId)).data.uid == request.auth.uid ||
          isAdmin()
        );
      }
      // Purchased Badges: Track badges bought in shop
      match /purchasedBadges/{badgeId} {
        allow read: if true;
        allow write: if request.auth != null && (
          get(/databases/$(database)/documents/users/$(userId)).data.uid == request.auth.uid ||
          isAdmin()
        );
      }
    }

    // Feedback: Create (Auth), Read (Admin)
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }

    // Referrals: Auth Read/Write
    match /referrals/{document} {
      allow read: if true; 
      allow write: if request.auth != null;
    }

    // Blocks: Auth Read/Write
    match /blocks/{document} {
      allow read, write: if request.auth != null;
    }

    // Friendships: Root level (for social.js)
    match /friendships/{friendshipId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Announcements: Public Read, Admin Write
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User Read Announcements: Auth Read/Write (own tracking)
    match /userReadAnnouncements/{userId} {
      allow read, write: if request.auth != null;
    }

    // Activity Feed: Public Read, Auth Write
    match /activityFeed/{activityId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Shop Items: Public Read, Admin Write
    match /shop_items/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Default Fallback (Block others)
    match /{document=**} {
      allow read, write: if false; 
    }
  }
}
