{
  "name": "girify",
  "description": "Girify - Barcelona Streets Quiz Game. Identify streets on the map in a daily challenge.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robdoesthething/Girify.git"
  },
  "keywords": [
    "game",
    "quiz",
    "map",
    "barcelona",
    "streets",
    "geography"
  ],
  "author": "robdoesthething",
  "license": "MIT",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "analyze": "vite build --mode analyze",
    "clean": "rm -rf dist node_modules/.vite",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "lint:report": "eslint . --ext js,jsx,ts,tsx --format html --output-file eslint-report.html",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "check": "npm run lint && npm run format:check && npm run test -- --run",
    "check:fix": "npm run lint:fix && npm run format",
    "validate": "npm run type-check && npm run lint && npm run test -- --run",
    "ci": "npm run lint && npm run format:check && npm run test -- --run && npm run build",
    "prepare": "husky install",
    "fetch-streets": "node scripts/fetchStreets.js",
    "export-csv": "node scripts/export_streets_csv.js",
    "generate-quiz-plan": "node scripts/generateQuizPlan.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "@turf/boolean-disjoint": "^7.3.2",
    "@turf/centroid": "^7.3.2",
    "@turf/distance": "^7.3.2",
    "@turf/helpers": "^7.3.2",
    "@upstash/redis": "^1.36.1",
    "firebase": "^12.7.0",
    "framer-motion": "^12.23.26",
    "i18next": "^25.8.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.562.0",
    "prop-types": "^15.8.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^16.5.1",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^7.11.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@emotion/is-prop-valid": "^1.4.0",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-onboarding": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^25.0.6",
    "@types/prop-types": "^15.7.15",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/browser-playwright": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "^10.1.11",
    "firebase-admin": "^13.6.0",
    "firebase-tools": "^15.3.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "storybook": "^10.1.11",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.17"
  },
  "overrides": {
    "react-helmet-async": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
