{
  "name": "girify-barcelona-quiz",
  "rewrites": [
    {
      "source": "/__/auth/:path*",
      "destination": "https://glorify-ad348.firebaseapp.com/__/auth/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 10
    }
  }
}
